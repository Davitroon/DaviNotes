---
import DocsLayout from "../../layouts/DocsLayout.astro";
import InfoBox from "../../components/InfoBox.astro";
import { languages } from "../../data/languages";

const pythonInfo = languages
	.find((lang) => lang.items.some((item) => item.title === "Python"))
	?.items.find((item) => item.title === "Python");
---

<DocsLayout title="Python">
	<h1 class="title"><span class="text-python">Python</span> Notes</h1>
	<p class="intro">
		Versatile language ideal for scripting, data science, and backend.
	</p>

	<InfoBox
		difficulty={pythonInfo?.difficulty}
		prerequisites={pythonInfo?.prerequisites}
	/>

	<hr class="divider" />

	<section>
		<h2>Key Concepts</h2>
		<ul class="topic-list">
			{
				pythonInfo?.concepts.map((concept) => (
					<li>
						<a href={concept.href}>
							<h3>{concept.title}</h3>
							<p>{concept.desc}</p>
						</a>
					</li>
				))
			}
		</ul>
	</section>
</DocsLayout>

<style>
	.text-python {
		color: #3776ab;
	}

	.topic-list a:hover {
		border-color: #3776ab;
	}
</style>

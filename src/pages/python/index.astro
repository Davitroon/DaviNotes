---
import DocsLayout from "../../layouts/DocsLayout.astro";
import InfoBox from "../../components/InfoBox.astro";
import { languages } from "../../data/languages";

const pythonInfo = languages
	.find((lang) => lang.items.some((item) => item.title === "Python"))
	?.items.find((item) => item.title === "Python");
---

<DocsLayout title="Python">
	<h1 class="title"><span class="text-python">Python</span> Notes</h1>
	<p class="intro">
		Versatile language ideal for scripting, data science, and backend.
	</p>

	<InfoBox
		difficulty={pythonInfo?.difficulty}
		prerequisites={pythonInfo?.prerequisites}
	/>

	<hr class="divider" />

	<section>
		<h2>Key Concepts</h2>
		<ul class="topic-list">
			{
				pythonInfo?.concepts.map((concept) => (
					<li>
						<a href={concept.href}>
							<h3>{concept.title}</h3>
							<p>{concept.desc}</p>
						</a>
					</li>
				))
			}
		</ul>
	</section>

	<hr class="divider" />

	<section class="install-section">
		<div class="cta-container">
			<h2>Ready to start building?</h2>
			<p>Follow the complete setup process in our dedicated guide.</p>

			<a
				href="/python/installation-guide"
				class="install-btn"
				title="See Python's installation guide"
			>
				Installation Guide <span>&rarr;</span>
			</a>
		</div>
	</section>
</DocsLayout>

<style>
	:root {
		--python-color: #3776ab;
		--python-color-dark: #295981;
	}

	.text-python {
		color: var(--python-color);
	}

	.topic-list a:hover {
		border-color: var(--python-color);
	}

	.install-btn {
		background-color: var(--python-color);
	}

	.install-btn:hover {
		background-color: var(--python-color-dark);
	}
</style>

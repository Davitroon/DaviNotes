---
import HomeLayout from "../../src/layouts/HomeLayout.astro";
import "../styles/global.css";
---

<HomeLayout title="404 - Page Not Found">
	<div class="error-container">
		<div class="content">
			<h1 class="error-code">4<span class="text-gradient">0</span>4</h1>

			<h2 class="subtitle">Page Not Found</h2>

			<div class="terminal-box">
				<div class="dots">
					<span></span><span></span><span></span>
				</div>
				<p class="description">
					The page you are looking for has been moved, deleted,
					or never existed.
				</p>
			</div>

			<a href="/" class="home-btn"> Return Home </a>
		</div>
	</div>
</HomeLayout>

<style>
/* =========================================
    Layout & Main Container
   ========================================= */
.error-container {
  min-height: 80vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 2rem;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1.5rem;
  max-width: 600px;
}

/* =========================================
    Typography & Text Styles
   ========================================= */
.error-code {
  font-size: 8rem;
  font-weight: 800;
  line-height: 1;
  margin: 0;
  color: white;
  text-shadow: 0 0 30px rgba(167, 139, 250, 0.2);
}

.subtitle {
  font-size: 2rem;
  margin: 0;
  color: white;
}

.description {
  font-size: 1.1rem;
  color: #a1a1aa;
  line-height: 1.6;
}

/* =========================================
    Terminal Decoration Component
   ========================================= */
.terminal-box {
  background: #1e2127;
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  padding: 1.5rem 2rem;
  margin: 2rem 0;
  width: 100%;
  max-width: 400px;
  text-align: left;
  font-family: monospace;
  position: relative;
  box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.5);
}

.dots {
  position: absolute;
  top: 12px;
  left: 12px;
  display: flex;
  gap: 6px;
}

.dots span {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
}

/* =========================================
    Navigation & Buttons
   ========================================= */
.home-btn {
  display: inline-block;
  background-color: white;
  color: black;
  padding: 0.75rem 2rem;
  border-radius: 99px;
  font-weight: bold;
  text-decoration: none;
  transition: 0.2s;
}

.home-btn:hover {
  transform: scale(1.05);
  background-color: #e4e4e7;
}
</style>

---
import DocsLayout from "../../layouts/DocsLayout.astro";

import { languages } from "../../data/languages";

const javaInfo = languages
	.find((lang) => lang.items.some((item) => item.title === "Java"))
	?.items.find((item) => item.title === "Java");
---

<DocsLayout title="Java">
	<h1 class="title"><span class="text-java">Java</span> Notes</h1>
	<p class="intro">Robust, cross-platform object-oriented language.</p>

	<hr class="divider" />

	<section>
		<h2>Key Concepts</h2>
		<ul class="topic-list">
			{
				javaInfo?.concepts.map((concept) => (
					<li>
						<a href={concept.href}>
							<h3>{concept.title}</h3>
							<p>{concept.desc}</p>
						</a>
					</li>
				))
			}
		</ul>
	</section>
</DocsLayout>

<style>
	.text-java {
		color: #f89820;
	}

	.topic-list a:hover {
		border-color: #f89820;
	}
</style>

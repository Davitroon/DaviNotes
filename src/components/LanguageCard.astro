---
interface Props {
	title: string;
	description: string;
	href: string;
	color: string; /* Ej: '#e34c26' para HTML */
}

const { href, title, description, color } = Astro.props;
---

<a href={href} class="lang-card" style={`--glow-color: ${color}`}>
	<div class="content">
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{description}
		</p>
	</div>
</a>

<style>
	.lang-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 12px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		text-decoration: none;
		color: white;
		position: relative;
		overflow: hidden;
	}

	.lang-card:hover {
		/* Animación visual al hacer hover */
		background-position: 0;
		background-image: var(--accent-gradient);
		box-shadow: 0 0 20px -5px var(--glow-color);
		transform: translateY(-3px);
	}

	/* Transición suave para el movimiento */
	.lang-card {
		transition: all 0.3s ease;
	}

	.content {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		background-color: #23262d;
		opacity: 0.8;
	}

	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		display: flex;
		justify-content: space-between;
	}

	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #a1a1aa;
	}

	h2 span {
		display: inline-block;
		transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.lang-card:hover h2 span {
		transform: translateX(5px);
	}
</style>
